<%= render "shared/header" %>

<%= form_with model: @user, url: user_session_path, class: 'registration-main', local: true do |f| %>
  <%= render "devise/shared/error_messages", model: f.object %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, class:"input-string", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, class:"input-string", autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.submit "Sign up" %>
  </div>
<% end %>